pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
                sleep 8
            }
        }
        stage('Build') {
            steps {
                echo 'Hello Build'
                sleep 5
            }
        }
        stage('Test') {
            steps {
                echo 'Hello Test'
                sleep 3
            }
        }
        stage('Deploy') {
            steps {
                echo 'Hello Deploy'
                sleep 5
            }
        }
    }
}
